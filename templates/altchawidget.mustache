    Example context (json):
    {
        "name": "altcha1",
        "maxnumber": "5",
        "challengejson": "{\"challenge\":\"...\",\"hash\":\"...\"}",
        "strings": "{\"reload\":\"Reload\",\"audio\":\"Audio version\",\"inputplaceholder\":\"Type the characters you see...\"}"
    }
}}
<script src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" async type="module"></script>
<altcha-widget
    name="{{name}}"
    maxnumber="{{maxnumber}}"
    challengejson="{{challengejson}}"
    strings="{{strings}}"
></altcha-widget>